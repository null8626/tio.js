{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    "noUnusedParameters": true,
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": true
  }
}
